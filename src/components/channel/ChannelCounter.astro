---
interface Props {
  count?: number;
}

const { count = 0 } = Astro.props;
---

<div class="channel-count" id="channel-count">
  {count} canales disponibles
</div>

<style>
  .channel-count {
    padding: 14px 20px;
    text-align: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.2);
  }
</style>
