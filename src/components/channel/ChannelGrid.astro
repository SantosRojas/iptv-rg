---
/**
 * ChannelGrid - Contenedor grid para los canales
 * Los items se renderizan dinámicamente desde el cliente
 * Los estilos de .channel-item están en ChannelItem.astro
 */
import EmptyState from '../ui/EmptyState.astro';
import LoadingState from '../ui/LoadingState.astro';
---

<div class="channel-list" id="channel-list">
  <EmptyState
    id="empty-state"
    message="Selecciona un país o categoría"
    hint='y presiona "Cargar Canales"'
  />
  
  <LoadingState
    id="loading-channels"
    message="Cargando canales..."
  />
  
  <div class="channels-container" id="channels-container"></div>
</div>

<style>
  .channel-list {
    flex: 1;
    overflow-y: auto;
    padding: 12px;
  }

  .channels-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(50px, 1fr));
    gap: 8px;
  }

  /* Scrollbar personalizado */
  .channel-list::-webkit-scrollbar {
    width: 6px;
  }

  .channel-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }

  .channel-list::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
  }

  .channel-list::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  @media (max-width: 768px) {
    .channel-list {
      padding: 8px;
    }

    .channels-container {
      grid-template-columns: repeat(auto-fill, minmax(45px, 1fr));
      gap: 6px;
    }
  }

  @media (max-width: 480px) {
    .channels-container {
      grid-template-columns: repeat(auto-fill, minmax(40px, 1fr));
    }
  }
</style>

<!-- 
  Estilos globales para items renderizados dinámicamente
  Deben coincidir con los estilos de ChannelItem.astro
-->
<style is:global>
  .channel-item {
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1;
    padding: 6px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .channel-item:hover {
    background: rgba(233, 69, 96, 0.2);
    border-color: rgba(233, 69, 96, 0.6);
    transform: scale(1.05);
    z-index: 1;
  }

  .channel-item.active {
    background: linear-gradient(135deg, rgba(233, 69, 96, 0.4) 0%, rgba(255, 107, 107, 0.3) 100%);
    border-color: #e94560;
    box-shadow: 0 0 15px rgba(233, 69, 96, 0.4);
  }

  .channel-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 6px;
  }

  .channel-logo-fallback {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .channel-tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 6px 10px;
    border-radius: 6px;
    font-size: 0.75rem;
    white-space: nowrap;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    z-index: 10;
    margin-bottom: 5px;
  }

  .channel-tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: rgba(0, 0, 0, 0.9);
  }

  .channel-item:hover .channel-tooltip {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .channel-item {
      padding: 5px;
    }
  }
</style>
