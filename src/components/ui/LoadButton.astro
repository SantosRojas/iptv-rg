---
interface Props {
  id: string;
  text: string;
  loading?: boolean;
}

const { id, text, loading = false } = Astro.props;
---

<button id={id} class:list={["load-btn", { loading }]}>
  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M21 12a9 9 0 11-6.219-8.56"/>
  </svg>
  {text}
</button>

<style>
  .load-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    background: linear-gradient(135deg, #e94560 0%, #ff6b6b 100%);
    border: none;
    border-radius: 10px;
    color: white;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 4px;
  }

  .load-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(233, 69, 96, 0.4);
  }

  .load-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .load-btn.loading svg {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>
